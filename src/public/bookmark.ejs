        <script src="https://cdn.tiny.cloud/1/czhzadznx3qb12g2i4971xbviqsshfv65cbyuvs95fsi5021/tinymce/6/tinymce.min.js"
            referrerpolicy="origin"></script>

</head>

<body>
    <div style="z-index: 0;">
        <%- include("./partials/navigation") -%>
    </div>
    <button class="btn btn-dark back-to-top" onclick="scrollToTop()">
        <i class="fas fa-angle-double-up"></i>
    </button>
    <div class="history">


        <div class="all-his">

            <div class="page-top-group">
                <a href="">
                    <!-- Này để chuyển qua trang chủ khi click vào bìa -->
                    <div class="index-background d-none d-lg-block">
                        <img src="./Image/BiaWeb.png">
                    </div>

                </a>
            </div>


            <main id="mainpart" class="user-page ">
                <div class="container test">
                    <div class="row d-block clearfix ">
                        <!-- Navigator board -->
                        <div class="col-12 col-lg-3 float-right navigator-board-all">
                            <section class="private-tabs ">
                                <header>
                                    <h4 class="section-name">Tài khoản</h4>
                                    <span class="user-name">Chủ nô</span>
                                </header>
                                <ul class="user-private-tabs ">
                                    <!-- Chèn link ở khu vực href -->
                                    <li class="current navigator-board-font "><a href="/bookmark"><span class="none inline-l "><i
                                                    class="fas fa-chevron-left"></i></span><span
                                                class="float-right none-l "><i
                                                    class="fas fa-chevron-down "></i></span>Bookmark</a>
                                    </li>
                                    <!-- Chữ Current cho nơi nào đó đang ở -->
                                    <li class=" navigator-board-font"><a href="/readinghistory"><span class="none inline-l"><i
                                                    class="fas fa-chevron-left"></i></span><span
                                                class="float-right none-l"><i
                                                    class="fas fa-chevron-down"></i></span>Lịch
                                            sử</a></li>
                                    <li class="navigator-board-font"><a href="/notification" style="color: #585858"><span
                                                class="none inline-l"><i class="fas fa-chevron-left"></i></span><span
                                                class="float-right none-l"><i
                                                    class="fas fa-chevron-down"></i></span>Thông
                                            báo
                                            cá nhân</a></li>
                                    <!-- Nơi này của ADMIN -->
                                    <li class="navigator-board-font"><a href="" style="color: #585858"><span
                                                class="none inline-l"><i class="fas fa-chevron-left"></i></span><span
                                                class="float-right none-l"><i
                                                    class="fas fa-chevron-down"></i></span>Quản
                                            lý
                                            User</a></li>
                                    <li class="navigator-board-font"><a href="" style="color: #585858"><span
                                                class="none inline-l"><i class="fas fa-chevron-left"></i></span><span
                                                class="float-right none-l"><i
                                                    class="fas fa-chevron-down"></i></span>Quản
                                            lý
                                            Comment</a></li>
                                </ul>
                            </section>
                            <!-- End of Navigator board -->
                        </div>

                        <!-- Khu vực truyện yêu thích -->
                        <div class="border-table">
                            <table class="table table-hover table-striped border-table2 ">
                                <!-- Header -->
                                <thead>
                                    <tr class="blu">
                                        <th class="text-left">Tên truyện</th>
                                        <th class="text-right-header">Chương mới nhất</th>
                                    </tr>
                                </thead>
                                <% function truncateTitle(title, maxTitleLength) { if (title.length> maxTitleLength) {
                                    return title.slice(0, maxTitleLength) + '...';
                                    }
                                    return title;
                                    } %>
                                    <tbody>
                                        <!-- Dòng 1 -->
                                        <% function truncateTitle(title, maxTitleLength) { %>
                                            <% if (title.length> maxTitleLength) { %>
                                                <%= title.slice(0, maxTitleLength) + '...' %>
                                                    <% } else { %>
                                                        <%= title %>
                                                            <% } %>
                                                                <% } %>

                                                                <% function getChapterName(latestChapterID, volumeID, bookID) { %>
                                                                    <% const chap = chapters.find(chap =>
                                                                      chap.bookID === bookID && chap.volID === volumeID && chap.chapID === parseInt(latestChapterID, 10)
                                                                    );
                                                                  
                                                                    if (chap) {
                                                                      return chap.chapName;
                                                                    } else {
                                                                      console.log('Chap not found');
                                                                      return 'Chương mới nhất';
                                                                    }
                                                                  } %>



                                                                            <% matchedBooks.forEach((book, index)=> { %>
                                                                                <% const
                                                                                    azureBlobBaseUrl='https://happinovel.blob.core.windows.net/bookcover'
                                                                                    ; %>
                                                                                    <% const
                                                                                        fullImageUrl=`${azureBlobBaseUrl}/${book.coverImg}`;
                                                                                        %>
                                                                                        <tr class="">
                                                                                            <td class="image-cell">
                                                                                                <img src="<%= fullImageUrl %>"
                                                                                                    alt="Small Image"
                                                                                                    width="60"
                                                                                                    height="80">
                                                                                                <div
                                                                                                    class="text-container">
                                                                                                    <div class="text1">
                                                                                                        <a href="#"
                                                                                                            title="<%= book.title %>">
                                                                                                            <%= truncateTitle(book.title,
                                                                                                                30) %>
                                                                                                        </a>
                                                                                                    </div>
                                                                                                    <div class="text2">
                                                                                                        Truyện sáng tác
                                                                                                    </div>
                                                                                                </div>
                                                                                            </td>
                                                                                            <% const
                                                                                                latestVolumeUrl=latestVolumeUrls[index];
                                                                                                %>
                                                                                                <% if (latestVolumeUrl)
                                                                                                    { %>
                                                                                                    <% const
                                                                                                        urlObject=new
                                                                                                        URL(latestVolumeUrl);
                                                                                                        %>
                                                                                                        <% const
                                                                                                            folderName=urlObject.pathname.split('/').filter(Boolean).pop();
                                                                                                            %>
                                                                                                            <% const
                                                                                                                volumeNumber=folderName.match(/\d+$/)[0];
                                                                                                                %>
                                                                                                                <% const
                                                                                                                    volume=volumes.find(vol=>
                                                                                                                    vol.bookID
                                                                                                                    ===
                                                                                                                    book.bookID
                                                                                                                    &&
                                                                                                                    vol.volID
                                                                                                                    ===
                                                                                                                    parseInt(volumeNumber,
                                                                                                                    10));
                                                                                                                    %>
                                                                                                                    <td class="text-right"
                                                                                                                        style="direction: rtl; ">
                                                                                                                        <% if
                                                                                                                            (volume)
                                                                                                                            {
                                                                                                                            %>
                                                                                                                            <%= getChapterName(latestChapterID,
                                                                                                                                volume.volID,
                                                                                                                                book.bookID)
                                                                                                                                %>
                                                                                                                                <% }
                                                                                                                                    %>
                                                                                                                                    <p>
                                                                                                                                        <% if
                                                                                                                                            (volume)
                                                                                                                                            {
                                                                                                                                            %>
                                                                                                                                            <a
                                                                                                                                                href="#">
                                                                                                                                                <%= volume.volName
                                                                                                                                                    %>
                                                                                                                                            </a>
                                                                                                                                            <% } else
                                                                                                                                                {
                                                                                                                                                %>
                                                                                                                                                Không
                                                                                                                                                tìm
                                                                                                                                                thấy
                                                                                                                                                volume
                                                                                                                                                mới
                                                                                                                                                <% }
                                                                                                                                                    %>
                                                                                                                                    </p>
                                                                                                                    </td>
                                                                                                                    <% } else
                                                                                                                        {
                                                                                                                        %>
                                                                                                                        <!-- Handle case when latestVolumeUrl is not available -->
                                                                                                                        <% }
                                                                                                                            %>
                                                                                        </tr>
                                                                                        <% }) %>
                                    </tbody>



                            </table>
                        </div>
                    </div>




                </div>





            </main>
        </div>
    </div>

    <footer class="mt-3" id="footer">
        <div class="container text-center">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <span>© 2023 - HappiNovel</span>
                </div>
                <div class="col-md-6">
                    <span>Liên hệ: <a href="">contact@slavesteam.vn</a></span>
                </div>
            </div>
        </div>
    </footer>
    <script>
        // Function to delete the frame and rearrange remaining frames
        function deleteFrame(frameId) {
            // Get the frame element by its ID
            var frame = document.getElementById(frameId);
            if (frame) {
                frame.remove();
            }
        }

        function deleteAllFrames() {
            // Get all frame elements with class "frame"
            frameId = 'frame1';
            deleteFrame(frameId)
            frameId = 'frame2';
            deleteFrame(frameId)
            frameId = 'frame3';
            deleteFrame(frameId)
            frameId = 'frame4';
            deleteFrame(frameId)
            frameId = 'frame5';
            deleteFrame(frameId)
            frameId = 'frame6';
            deleteFrame(frameId)
            frameId = 'frame7';
            deleteFrame(frameId)
            frameId = 'frame8';
            deleteFrame(frameId)
            frameId = 'frame9';
            deleteFrame(frameId)
            frameId = 'frame10';
            deleteFrame(frameId)
        }
    </script>
    <script>
        // Function to scroll to the top of the page smoothly
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        // Show the back-to-top button when the user scrolls down
        window.addEventListener('scroll', function () {
            var button = document.querySelector('.back-to-top');
            if (window.scrollY > 300) {
                button.style.display = 'block';
            } else {
                button.style.display = 'none';
            }
        });
    </script>

</body>

</html>